<div 
  class="knowledge-check identifiable-abilities"
  style="display: grid; grid-template-columns: fit-content(30px) auto min-content; align-items: baseline;">
  {{#each items as |itemData key|}}
    <div class="{{#if itemData.showHtmlDescription}}knowledge-check-toggle-description{{/if}}" style="width: 30px; height: 30px; margin-right: 4px; align-self: center; {{#if itemData.showHtmlDescription}}cursor: pointer;{{/if}}">
      {{#if itemData.showImg}}
        <img src="{{itemData.img}}" />
      {{/if}}
    </div>
    <div class="{{#if itemData.showHtmlDescription}}knowledge-check-toggle-description{{/if}}" style="{{#if itemData.showHtmlDescription}}cursor: pointer;{{/if}}">
      {{#if itemData.hideOriginalName}}
        {{itemData.unidentifiedName}}
      {{else}}
        {{itemData.name}}
      {{/if}}
    </div>
    <label style="align-items: center; display: flex; align-self: center; {{#if itemData.revealed}}color: green;{{else}}color: red;{{/if}} {{#unless itemData.disabled}}cursor: pointer;{{/unless}}">
      <input class="knowledge-check identifiable" type="checkbox" data-actor-id="{{itemData.actorId}}" data-owned-item-id="{{itemData.ownedItemId}}" {{#if itemData.checked}}checked{{/if}} {{#if itemData.disabled}}disabled{{/if}}/>
      {{#if itemData.revealed}}
        revealed
      {{else}}
        reveal
      {{/if}}
    </label>
    {{#if itemData.showHtmlDescription}}
      <div class="knowledge-check-description" style="grid-column: span 3; display: none;">
        {{{itemData.htmlDescription}}}
      </div>
    {{/if}}
  {{/each}}
</div>